{
	"name": "istrainless",
	"displayName": "IstrainLess",
	"description": "Away From Eye Strain",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.70.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "istrainless.setBreakTimeout",
				"title": "IstrainLess: Set Break Timeout"
			},
			{
				"command": "istrainless.setBreakDuration",
				"title": "IstrainLess: Set Break Duration"
			}
		],
		"configuration": [
			{
				"properties": {
					"istrainless.breakTimeout": {
						"type": "number",
						"default": 15,
						"description": "Minutes to wait between breaks.",
						"minimum": 1,
						"order": 1
					},
					"istrainless.breakDuration": {
						"type": "number",
						"default": 5,
						"description": "How many minutes a break lasts.",
						"minimum": 0.25,
						"order": 2
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.93.0",
		"@types/mocha": "^10.0.8",
		"@types/node": "20.x",
		"@typescript-eslint/eslint-plugin": "^8.7.0",
		"@typescript-eslint/parser": "^8.7.0",
		"eslint": "^9.11.1",
		"typescript": "^5.6.2",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1"
	}
}
